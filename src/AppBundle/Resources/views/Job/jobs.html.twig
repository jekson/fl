{% extends "AppBundle:Default:base.html.twig" %}

{% block title %}Поиск работы Sternlight{% endblock %}
{% block header %}
    <div class="info">
        <h2>{{ block('title') }}</h2>
        <div class="breadcrumbs"><a href="#">Работа</a> > <a href="#">Администрирование сайтов</a></div>
    </div>
    <a href="{{ url('jobCreate') }}" class="button big_button fl_r">Опубликовать задание</a>
{% endblock %}

{% block leftmenu %}
<div class="sidebar">
    <div class="block ui_block">
        <ul class="ui">
            <li class="title">Все категории <span class="num"></span></li>
            {% for cat in categoryes %}
                <li>
                    <a href="{{ url('jobs', {'category': cat.url}) }}">{{ cat.name }}</a>
                    <span class="num">{{ cat.countJobsInChildrens }}</span>
                </li>
                {% if not category is empty %}
                    {% if cat.id == category.0.id %}
                        <ul>
                            {% for cat in cat.children %}
                                123
                            {% endfor %}
                        </ul>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}
{% block body %}
<div class="content">
    <div class="jobs_list">
        {% for job in jobs %}
            {% include 'AppBundle:Job:job_item.html.twig' with {'job': job} %}
        {% endfor %}
    </div>
</div>
{% endblock %}